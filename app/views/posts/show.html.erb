<!--shows each post-->
<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>
  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago
    | <%= link_to "Edit", edit_post_path(@post) %>
    | <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?" } %>
  </p>
  <p class="body">
      <%= @post.body %>
  </p>
  <div class="comments"><!--shows the number of comments in show page-->
    <h2><%= @post.comments.count %>Comments</h2> <!--shows number of comments-->
    <%= render @post.comments %> <!-- displays the comments -->

    <h3>Add a comment:</h3>
    <%= render "comments/form"%>  <!-- calls the comments form partial-->
  </div>
</div>
