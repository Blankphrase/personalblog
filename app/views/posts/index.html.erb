<!-- big image at top of blog -->
<div class="bannerimg overlay">
  <div id="header" class="vcenter">
    <div class="logo">
      <img src="/assets/logo.png" />
    </div>
    <h1 id="blog" class="text-center">
      <font color="#ffffff">BLOG</font><br>
      <div class="avatar">
      </div>
    </h1>
  </div>
</div>
<br>

<!-- search bar  -->
<div class="row" id="rowbutton">
  <div class="container">
    <div class="row row-center">
      <div class="row">
        <div class="col-sm-6 text-center">
          <h3 class="text-center vcenter">
            <div class="alert alert-danger" role="alert">
              <p class="notice"><%= notice %></p>
              <p class="alert alert-danger"><%= alert %></p>
            </div>
          </h3>
        </div>
        <div class="col-sm-6">
          <img class="circular" alt="avatar" />
          <button class="btn">Sign out</button>
        </div>
      </div>

    </div>
  </div>
</div>
<br>

<!-- BLOG SECTION -->
  <div class="container">
    <% @posts.each do |post| %>
      <div class="panel panel-default text-center">
        <div class="panel-heading">
          <h4 class="panel-title"><%= link_to sanitize(post.title, :tags=>[]).truncate(50, :separator=>" ").html_safe, post %></h4>
          <h6 class="panel-title myfont"><%= post.created_at.strftime("%B, %d, %Y")%></h6>
        </div>
        <h5 class="panel-body">
          <%= sanitize(post.body, :tags=>[]).truncate(50, :separator=>"").html_safe%>
        </h5>
      </div>
    <% end %>
    <%= paginate @posts %>
  </div>
